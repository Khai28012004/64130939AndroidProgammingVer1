<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/logontu"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp"
        android:contentDescription="@string/logo_description"/>

    <Button
        android:id="@+id/btnChucNang2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chức năng 2"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btnChucNang3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chức năng 3"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btnChucNang4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chức năng 4"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btnAboutMe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Giới thiệu bản thân"/>

</LinearLayout>
